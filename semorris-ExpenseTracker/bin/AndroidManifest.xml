<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.expensetracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ExistingClaimsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmailClaimActivity"
            android:label="@string/title_activity_email_claim" >
        </activity>
        <activity
            android:name=".EditExpenseActivity"
            android:label="@string/title_activity_edit_expense" >
        </activity>
        <activity
            android:name=".AddExpenseActivity"
            android:label="@string/title_activity_add_expense" >
        </activity>
        <activity
            android:name=".ChangeStatusActivity"
            android:label="@string/title_activity_change_status" >
        </activity>
        <activity
            android:name=".CreateClaimActivity"
            android:label="@string/title_activity_create_claim" >
        </activity>
        <activity
            android:name=".ClaimCreatedActivity"
            android:label="@string/title_activity_claim_created" >
        </activity>
        <activity
            android:name=".ExpenseListActivity"
            android:label="@string/title_activity_expense_list" >
        </activity>
        <activity
            android:name=".ViewClaimActivity"
            android:label="@string/title_activity_view_claim" >
        </activity>
        <activity
            android:name=".ViewExpenseActivity"
            android:label="@string/title_activity_view_expense" >
        </activity>
    </application>

</manifest>
